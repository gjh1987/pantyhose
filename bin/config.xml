<?xml version="1.0" encoding="UTF-8"?>
<config>
    <servers>
        <group name="master">
            <server id="1" back_tcp_port="3011"/>
        </group>
        
        <group name="session">
            <server id="11" back_tcp_port="3111" front_tcp_port="3112" front_ws_port="3113"/>
            <server id="12" back_tcp_port="3121" front_tcp_port="3122" front_ws_port="3123"/>
        </group>
        
        <group name="chat">
            <server id="21" back_tcp_port="3211"/>
            <server id="22" back_tcp_port="3221"/>
        </group>
    </servers>

    <log debug="terminal|file"
        info="terminal|file"
        net="terminal|file"
        warn="terminal|file"
        err="terminal|file"/>

    <author key="djch&amp;hc1"/>
    <run_time worker_threads="4"/>

    <!-- MongoDB 数据库配置 -->
    <mongodb>
        <connection_string>mongodb://localhost:27017</connection_string>
        <database_name>pantyhose</database_name>
        <options>
            <max_pool_size>50</max_pool_size>
            <min_pool_size>10</min_pool_size>
            <max_idle_time_ms>30000</max_idle_time_ms>
            <connect_timeout_ms>5000</connect_timeout_ms>
            <socket_timeout_ms>30000</socket_timeout_ms>
        </options>
    </mongodb>
</config>